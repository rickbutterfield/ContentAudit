{
  "$schema": "appsettings-schema.json",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    }
  },
  "Umbraco": {
    "CMS": {
      "DeliveryApi": {
        "Enabled": true,
        "PublicAccess": true
      },
      "Global": {
        "Id": "42b19183-fa4c-4d74-91e4-ea2fffc6507f",
        "SanitizeTinyMce": true
      },
      "Content": {
        "AllowEditInvariantFromNonDefault": true,
        "ContentVersionCleanupPolicy": {
          "EnableCleanup": true
        }
      },
      "ModelsBuilder": { "ModelsMode": "SourceCodeAuto" }
    }
  },
  "uSync": {
    "Settings": {
      "ExportOnSave": "All",
      "ImportAtStartup": "All",
      "ImportOnFirstBoot": true
    }
  },
  "ContentAudit": {
    "UseSitemapXml": true,
    "RespectRobotsTxt": true
  }
}
